<form class="row g-3 p-5" action="" method="post">
  <div><h2 class="text-primary fw-bold">Yangi guruh qo’shish</h2></div>
  <div class="col-md-4">
    <label for="inputEmail4" class="form-label">Guruh yo’nalishi</label>
    <input
      type="text"
      class="form-control"
      id="inputEmail4"
      name="direction"
      placeholder="Guruh yo’nalishi"
      title="Eng kami 1 ta harif bolsin eng kopi 15 ta harif bolsin va hamasi katta hariflarda bolsin"
      required
    />
  </div>
  <div class="col-md-4">
    <label for="inputPassword4" class="form-label">Dars kunlari</label>
    <input
      type="text"
      class="form-control"
      id="inputPassword4"
      placeholder="DU-CHOR-JUMA"
      name="class_days"
      placeholder="Dars kunlari"
      pattern="[A-Z]{2,4}-[A-Z]{2,4}-[A-Z]{2,4}"
      title="Dars kunlarini quyidagi misol buyicha kiriting DU-CHOR-JUMA"
      required
    />
  </div>
  <div class="col-4">
    <label for="inputAddress" class="form-label">Dars vaqti</label>
    <input
      type="text"
      class="form-control"
      id="inputAddress"
      name="class_time"
      placeholder="Dars vaqti"
      pattern="[0-9]{1,2}:[0-9]{1,2}-[0-9]{1,2}:[0-9]{1,2}"
      title="Dars vaqtini quyidagi misol buyicha kiriting 9:00-11:00"
      required
    />
  </div>
  <div class="col-md-4">
    <label for="inputEmail1" class="form-label">O’qituvchi</label>
    <input
      type="text"
      class="form-control"
      id="inputEmail1"
      name="teacher_name"
      placeholder="O’qituvchi ismi"
      pattern="[A-Za-z]{3,15}"
      title="Eng kami 3ta harif bolsin eng kopi 15ta harif bolsin"
      required
    />
  </div>
  <div class="col-md-4">
    <label for="inputPassword2" class="form-label"
      >O’qituvchi tell nomeri</label
    >
    <input
      type="text"
      class="form-control"
      id="inputPassword2"
      name="teacher_phone"
      value="+998"
      pattern="^\+998[3-9][0-9][0-9]{3}[0-9]{2}[0-9]{2}"
      title="Faqat son kiriting misol uchun +998901234567"
      placeholder="Telefon raqam"
    />
  </div>

  <div class="col-md-4">
    <label for="inputPassword2" class="form-label transparent"
      >Ota onasi nomeri</label
    >
    <button type="submit" class="btn btn-primary btn_widht">Qo’shish</button>
  </div>
</form>
